---
import AstroOne from '@/assets/astro_1.webp'
import AstroTwo from '@/assets/astro_2.webp'
import { Image } from 'astro:assets'
---

<div class='w-screen h-screen z-20 absolute overflow-hidden'>
  <Image
    src={AstroOne}
    alt='Astronaut One'
    class='w-40 md:w-80 move-right absolute -left-96 bottom-0'
  />
  <Image
    src={AstroTwo}
    alt='Astronaut Two'
    class='w-40 md:w-80 fall absolute -top-96 left-1/3'
  />
</div>

<style>
  .fall {
    animation: falling 30s ease-in infinite;
  }

  .move-right {
    animation: moveRight 30s ease-in infinite;
    animation-delay: 12s;
  }

  @keyframes falling {
    0% {
      transform: translate3d(0, 0, 0) rotate(0deg) scale(1);
    }
    50% {
      transform: translate3d(40vw, 130vh, 0) rotate(40deg) scale(0.6);
    }
    100% {
      transform: translate3d(40vw, 130vh, 0) rotate(40deg) scale(0.6);
    }
  }

  @keyframes moveRight {
    0% {
      transform: translate3d(0, 0, 0) rotate(-10deg) scale(0.6);
    }
    40% {
      transform: translate3d(200vw, -80vh, 0) rotate(10deg) scale(1.2);
    }
    100% {
      transform: translate3d(200vw, -80vh, 0) rotate(10deg) scale(1.2);
    }
  }
</style>
